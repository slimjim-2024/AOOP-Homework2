<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="400" Height="300"
        x:Class="AOOP_Homework2.NewSubjectWindow"
        Title="Create New Subject">

    <StackPanel Margin="20" Spacing="15">
        <TextBox x:Name="NameTextBox" Watermark="Subject Name" FontSize="16"/>
        <TextBox x:Name="DescriptionTextBox" Watermark="Description" 
               AcceptsReturn="True" TextWrapping="Wrap" Height="100" FontSize="14"/>
        <Button Content="Create Subject" Click="CreateSubject_Click" 
              Height="40" FontSize="16"/>
    </StackPanel>
</Window>